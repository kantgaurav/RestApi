package pojo;

import java.util.Arrays;

import org.apache.juneau.annotation.Beanc;

public class Product {
	
	private String name;
	private int price;
	private String color;
	private String[] selllerName;
	
	@Beanc(properties  = "name, price,color, sellerName")
	public Product(String name, int price, String color, String[] selllerName) {
		super();
		this.name = name;
		this.price = price;
		this.color = color;
		this.selllerName = selllerName;
	}


	public String getName() {
		return name;
	}

	@Override
	public String toString() {
		return "Product [name=" + name + ", price=" + price + ", color=" + color + ", selllerName="
				+ Arrays.toString(selllerName) + "]";
	}


	public void setName(String name) {
		this.name = name;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;
	}

	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	public String[] getSelllerName() {
		return selllerName;
	}

	public void setSelllerName(String[] selllerName) {
		this.selllerName = selllerName;
	}
	
	
	

}
